<?xml version="1.0" encoding="UTF-8" ?>
<!--

activeLandingRunways
The route will be shown if the runways marked for landing are in this comma separated list 

activeStartRunways
The route will be shown if the runways marked for starts are in this comma separated list 


navaids
List of navaids to hightlight (display always)

line
  .begin "last"(previous end point), Navaid code or geo coordinates ("lat,lon")
  .end (optional if angle and length is given) Navaid code or geo coordinates ("lat,lon")
  .angle (displayed and used for calculation if .end has been omitted
  .length (used for calculation if angle is given and .end has been omitted)
  .beginOffset
  .endOffset (if end is given)
  .stroke (optional if differs from normal line) alternatives: "dashed","dots"
  .lineWidth (optional)
  .arrows (optional) "none","start","end","both"
  
bow
  .center Navaid code or geo coordinates ("lat,lon")
  .radius in miles
  .beginAngle
  .endAngle
  .stroke (optional if differs from normal line) alternatives: "dashed","dots"
  .lineWidth (optional)
  
curve
  .begin "last"(previous end point), Navaid code or geo coordinates ("lat,lon")
  .end Navaid code or geo coordinates ("lat,lon")
  .controlPoint Navaid code or geo coordinates ("lat,lon")
  .stroke (optional if differs from normal line) alternatives: "dashed","dots"
  .lineWidth (optional)

loop
  .navpoint Navaid code of inbound navaid
  .inboundHeading heading of inbound leg
  .width (optional) width of inbound/outbound leg if known
  .right is it a right loop? false == left
  .arrows (optional) "none","both" 
  .minHeight minimum height of loop (displayed inside loop)
  .maxHeight maximum height of loop (displayed inside loop)
  .misapHeight minimum default height for missed approaches (displayed inside loop)
  .stroke (optional if differs from normal line) alternatives: "dashed","dots"
  .lineWidth (optional)

-->
<routes>
	<route name="RW 15 routes">
		<activeLandingRunways>15</activeLandingRunways>
		<!-- route ALTIK -->
		<navaids>BLM,ALTIK,ROFAC,INTEM,HOMBO,LUMEL,ARPUS</navaids>
		<loop navpoint="ALTIK" inboundHeading="94" width="2" right="true" stroke="dashed" arrows="both" minHeight="5500" maxHeight="11000" misapHeight="4000"/>>
		<line begin="ALTIK" end="BLM" angle="94" endOffset="9"/>
		<bow center="BLM" radius="12" beginAngle="274" endAngle="328"/>
		<bow center="BLM" radius="9" beginAngle="274" endAngle="327"/>
		<!-- route Straight in -->
		<loop navpoint="ROFAC" inboundHeading="155" width="5" right="true" stroke="dashed" arrows="both" minHeight="6700" maxHeight="11000"/>>
		<line begin="ROFAC" end="BLM" angle="155" endOffset="9.5"/>
	<route>
</routes>